<footer class="site-footer">
  <div class="wrap">

    <!-- Logo / image -->
    <a href="/" class="footer__brand" aria-label="Home">
      <!-- swap this src for your real logo -->
      <img src="/media/logo-placeholder.svg" alt="Your logo" class="footer__logo" width="160" height="48" />
    </a>

  

    <!-- Simple contact form -->
    <form id="contact" class="footer-form" method="post" action="/api/contact" novalidate>
      <!-- anti-bot honeypot -->
      <input type="text" name="website" class="hp" tabindex="-1" autocomplete="off" aria-hidden="true" />

      <div class="form-grid">
        <div class="field">
          <label for="name">Full name</label>
          <input id="name" name="name" type="text" required autocomplete="name" placeholder="Jane Doe" />
          <small class="hint">Required</small>
        </div>

        <div class="field">
          <label for="email">Email</label>
          <input id="email" name="email" type="email" required autocomplete="email" placeholder="you@example.com" />
          <small class="hint">Required</small>
        </div>

        <div class="field">
          <label for="phone">Phone <span class="muted">(optional)</span></label>
          <input id="phone" name="phone" type="tel" inputmode="tel" autocomplete="tel"
                 placeholder="(555) 555-5555"
                 pattern="^\\+?[\\d\\s\\-\\(\\)]{7,}$" />
        </div>

        <div class="field field--full">
          <label for="message">Message <span class="muted">(optional)</span></label>
          <textarea id="message" name="message" rows="4" placeholder="Tell us how we can help…"></textarea>
        </div>

        <div class="field field--full">
          <label class="consent">
            <input id="consent" name="consent" type="checkbox" required />
            <span>By checking this box, you agree to our <a href="/terms">Terms</a> and acknowledge our <a href="/privacy">Privacy Policy</a>.</span>
          </label>
        </div>

        <div class="actions field--full">
          <button type="submit" class="btn">Send</button>
          <span class="status" role="status" aria-live="polite"></span>
        </div>
      </div>
    </form>

      <!-- Social icons -->
    <nav class="social" aria-label="Social media">
      <ul class="social__list">
        <li>
          <a class="social__link" href="https://facebook.com/yourpage" target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            <img src="/icons/facebook.svg" alt="" width="24" height="24" />
            <span class="sr-only">Facebook</span>
          </a>
        </li>
        <li>
          <a class="social__link" href="https://x.com/yourhandle" target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)">
            <img src="/icons/x.svg" alt="" width="24" height="24" />
            <span class="sr-only">X</span>
          </a>
        </li>
        <li>
          <a class="social__link" href="https://instagram.com/yourhandle" target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <img src="/public/media/instagram.svg" alt="" width="24" height="24" />
            <span class="sr-only">Instagram</span>
          </a>
        </li>
        <li>
          <a class="social__link" href="https://www.linkedin.com/company/yourcompany" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <img src="/icons/linkedin.svg" alt="" width="24" height="24" />
            <span class="sr-only">LinkedIn</span>
          </a>
        </li>
        <li>
          <a class="social__link" href="https://youtube.com/@yourchannel" target="_blank" rel="noopener noreferrer" aria-label="YouTube">
            <img src="/icons/youtube.svg" alt="" width="24" height="24" />
            <span class="sr-only">YouTube</span>
          </a>
        </li>
      </ul>
    </nav>

    <hr class="rule" />
    <p class="copy">© {new Date().getFullYear()} Your Organization. All rights reserved.</p>
  </div>

  <style>
    /* container & layout */
    .site-footer {
      background: #0f172a; color: #e2e8f0;
      border-top: 1px solid #1f2937;
      padding: 2rem 0; width: 100%;
    }
    .wrap { max-width: 1100px; margin: 0 auto; padding: 0 1rem; text-align: center; }

    /* logo */
    .footer__brand { display:inline-flex; align-items:center; justify-content:center; margin: 0 auto .5rem; }
    .footer__logo { height: 56px; width: auto; object-fit: contain; display:block; }

    /* social */
    .social { margin: .75rem 0 1rem; }
    .social__list {
      list-style: none; padding: 0; margin: 0;
      display: flex; gap: .6rem; justify-content: center; flex-wrap: wrap;
    }
    .social__link {
      --size: 44px;
      width: var(--size); height: var(--size);
      display: inline-grid; place-items: center;
      border: 1px solid #243143; border-radius: 999px;
      background: #0b1220; color: #94a3b8;
      transition: transform .2s ease, border-color .2s ease, color .2s ease;
    }
    .social__link:hover, .social__link:focus-visible {
      border-color: #facc15; color: #facc15; transform: scale(1.05);
    }
    .social__link img { width: 24px; height: 24px; display: block; }

    /* form */
    .footer-form { margin-top: .5rem; }
    .form-grid { display:grid; grid-template-columns: 1fr; gap: 3rem; justify-items: center; }
    @media (min-width: 860px) {
      .form-grid { grid-template-columns: repeat(2, minmax(260px, 1fr)); max-width: 900px; margin: 0 auto; }
      .field--full { grid-column: 1 / -1; }
    }
    .field { width: min(100%, 520px); text-align: left; }
    .field label { display:block; font-weight:600; color:#fff; margin-bottom:.3rem; }
    .muted { color:#94a3b8; font-weight:400; }
    .field input[type="text"],
    .field input[type="email"],
    .field input[type="tel"],
    .field textarea {
      width:100%; min-height:44px; padding:.6rem .8rem;
      border-radius:10px; border:1px solid #243143; background:#0b1220; color:#e2e8f0;
    }
    .field textarea { min-height: 120px; }
    .field ::placeholder { color:#9aa6b2; opacity:.9; }
    .hint { display:block; margin-top:.25rem; font-size:.85rem; color:#9aa6b2; }

    .consent { display:flex; gap:.6rem; align-items:flex-start; }
    .consent input { margin-top:.35rem; }

    .btn {
      padding:.6rem .95rem; border-radius:10px;
      background:#111827; border:1px solid #243143; color:#e2e8f0;
    }
    .btn:hover { border-color:#facc15; color:#facc15; }

    .status { margin-left:.75rem; font-size:.95rem; }
    .rule { border:0; border-top:1px solid #1f2937; margin:1.5rem 0 .75rem; }
    .copy { margin:0; color:#cbd5e1; }

    /* a11y */
    :focus-visible { outline:2px solid #facc15; outline-offset:2px; border-radius:6px; }
    .hp { position:absolute; left:-9999px; top:auto; width:1px; height:1px; overflow:hidden; }
    .sr-only { position:absolute !important; width:1px; height:1px; padding:0; margin:-1px; overflow:hidden; clip:rect(0,0,0,0); white-space:nowrap; border:0; }
  </style>

  <script is:inline>
    const form = document.getElementById('contact');
    const status = form?.querySelector('.status');
    form?.addEventListener('submit', (e) => {
      form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        status.textContent = '';
        if (!form.checkValidity()) {
          status.textContent = 'Please complete the required fields.';
          const firstInvalid = form.querySelector(':invalid');
          firstInvalid?.focus();
          return;
        }
        status.textContent = 'Sending…';

        const formData = new FormData(form);
        try {
          const response = await fetch(form.action, {
            method: form.method,
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });
          if (response.ok) {
            status.textContent = 'Thank you! Your message has been sent.';
            form.reset();
          } else {
            const error = await response.json();
            status.textContent = error.message || 'Something went wrong. Please try again.';
          }
        } catch (err) {
          status.textContent = 'Network error. Please try again later.';
        }
      });
