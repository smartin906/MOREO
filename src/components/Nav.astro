---
import logo from "../assets/logo.svg";
const links = [
  { name: "Home", href: "/home" },
  { name: "Partners", href: "/partners" },
  { name: "About Us", href: "/about" },
  { name: "example", href: "/example" },
];
const { pathname } = Astro.url;
---
<nav class="nav">
  <div class="container nav__row">
    <a href="/home" class="nav__brand">
      <img src={logo.src} alt="Rural Education Outreach Logo" width="120" height="120" class="nav__logo" />
    </a>

    <ul class="nav__list">
      {links.map(link => (
        <li>
          <a
            href={link.href}
            class={pathname === link.href ? "active" : ""}
            aria-current={pathname === link.href ? "page" : undefined}
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<style>
.nav__row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.nav__brand {
  display: flex;
  align-items: center;
  gap: .5rem;
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: .5px;
}
.nav__logo {
  width: 120px;
  height: 120px;
  object-fit: contain;
}
@media (max-width: 480px) {
  .nav__title { font-size: 1rem; }
}
</style>
